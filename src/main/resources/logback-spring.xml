<configuration>
	<property resource="application.properties" />

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<!-- encoders are assigned the type ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{24} - %msg%n</pattern>
		</encoder>
	</appender>
	
	<appender name="AppLogFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- daily rollover -->
			<fileNamePattern>${app.logging.path}/SecurityProto2App.%d{yyyy-MM-dd}.log</fileNamePattern>
			<!-- keep 15 days' worth of history capped at 3GB total size -->
			<maxHistory>15</maxHistory>
			<totalSizeCap>3GB</totalSizeCap>
		</rollingPolicy>
		<!-- encoders are assigned the type ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{24} - %msg%n</pattern>
		</encoder>
	</appender>

	<logger name="com.epr" level="info" >
		<appender-ref ref="AppLogFile" />
 	</logger>

	<logger name="org.springframework" level="debug">
		<appender-ref ref="AppLogFile" />
 	</logger>
	  
	<root level="info">
		<!-- 
		<appender-ref ref="STDOUT" />
		<appender-ref ref="AppLogFile" />	
		-->	
	</root>
</configuration>